<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <Canvas x:Key="MinimalizeButtonContent">
        <Line X1="-4" Y1="4" X2="4" Y2="4"/>
    </Canvas>

    <Canvas x:Key="SwitchWindowStateButtonContent">
        <Polyline Points="-5,6,-5,-2,3,-2,3,6,-5, 6,-5, -2"/>
        <Polyline Points="-3,-2,-3,-5,6,-5,6,4,3,4"/>
    </Canvas>

    <Canvas x:Key="CloseWindowButtonContent">
        <Line X1="-4" Y1="-4" X2="4" Y2="4"/>
        <Line X1="-4" Y1="4" X2="4" Y2="-4"/>
    </Canvas>

</ResourceDictionary>